<?xml version = "1.0" encoding = "utf-8"?>

<hibernate-mapping>
    <class name = "ru.job4j.cars_storage.models.Transmission" table = "transmission">

        <id name = "id" column = "id">
            <generator class="identity"/>
        </id>

        <property name = "name" column = "name"/>

        <bag name="cars" inverse="true" lazy="true" fetch="select">
            <key column="id_transmission" not-null="true"/>
            <one-to-many class="ru.job4j.cars_storage.models.Car"/>
        </bag>
    </class>
</hibernate-mapping>